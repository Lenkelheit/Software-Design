@model Apartments_io.Areas.Resident.ViewModels.Apartments.ListViewModel


@foreach (Apartment apartment in Model.Apartments)
{
    <div>
        <img src="@apartment.MainPhoto" width="150" height="100" />
        <p>@apartment.Name</p>
        <p>@apartment.RentEndDate?.ToShortDateString()</p>

        <a asp-controller="Apartments" asp-action="Single" asp-route-apartmentId="@apartment.Id" >Open</a>
    </div>
}

<!--PAGINATION-->
<pagination-link pagination-model="Model.PaginationModel" controller-name="Apartments" action-name="MyRent"></pagination-link>