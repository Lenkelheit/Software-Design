@model DataAccess.Entities.Apartment

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Apartment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <img src="~/uploads/files/apartment/noimage.png" width="150" height="100" id="preview-image" />

                <label for="main-photo" class="control-label"></label>
                <input type="file" name="uploadFile" id="main-photo" />
                <input type="submit" />
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RentEndDate" class="control-label"></label>
                <input asp-for="RentEndDate" class="form-control" />
                <span asp-validation-for="RentEndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


@section Scripts
    {
    <script>
        document.getElementById("main-photo").onchange = function () {
            preview_image
                ({
                    file_input_id: 'main-photo',
                    image_preview_id: 'preview-image',
                });
        };

    </script>
}